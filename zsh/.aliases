# Package management
# Function to update and upgrade Homebrew packages
brewup() {
  echo "ğŸ”„ Updating Homebrew..."
  if ! brew update; then
    echo "âŒ Failed to update Homebrew. Please check for errors."
    return 1
  fi

  echo "â¬†ï¸ Upgrading Homebrew packages..."
  if ! brew upgrade; then
    echo "âŒ Failed to upgrade Homebrew packages. Please check for errors."
    return 1
  fi

  echo "ğŸ§¹ Cleaning up Homebrew..."
  if ! brew cleanup; then
    echo "âŒ Failed to clean up Homebrew. Please check for errors."
    return 1
  fi

  echo "âœ… Homebrew update, upgrade, and cleanup completed successfully."
}

