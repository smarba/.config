# Git aliases

alias gta='git add .'

# Git pull function
# Git pull function
gpull() {
  if [[ -z "$1" ]]; then
    echo "âŒ Error: No branch specified."
    echo "Usage: gpull <branch-name>"
    return 1
  fi

  local branch="$1"

  echo "ğŸ”„ Switching to branch '$branch'..."
  git checkout "$branch"

  if [[ $? -ne 0 ]]; then
    echo "âŒ Failed to switch to branch '$branch'."
    return 1
  fi

  echo "â¬‡ï¸ Pulling latest changes from origin/$branch..."
  git pull origin "$branch"

  if [[ $? -ne 0 ]]; then
    echo "âŒ Failed to pull changes from origin/$branch. Please check for errors."
    return 1
  fi

  echo "âœ… Successfully pulled latest changes for branch '$branch'."
}

# Git push function
gpush() {
  if [[ -z "$1" ]]; then
    echo "âŒ Error: No commit message specified."
    echo "Usage: gpush <commit-message>"
    return 1
  fi

  local commit_message="$1"
  local branch=$(git rev-parse --abbrev-ref HEAD)

  echo "ğŸ“‚ Staging all changes..."
  git add .

  if [[ $? -ne 0 ]]; then
    echo "âŒ Failed to stage changes. Please check for errors."
    return 1
  fi

  echo "ğŸ“ Committing changes with message: '$commit_message'..."
  git commit -m "$commit_message"

  if [[ $? -ne 0 ]]; then
    echo "âŒ Failed to commit changes. Please check for errors."
    return 1
  fi

  echo "â¬†ï¸ Pushing changes to origin/$branch..."
  git push origin "$branch"

  if [[ $? -ne 0 ]]; then
    echo "âŒ Failed to push changes to origin/$branch. Please check for errors."
    return 1
  fi

  echo "âœ… Successfully pushed changes to origin/$branch."
}
